body{
    margin: 0;
    padding: 0;
    // height: 100px;
    background-color: #000000;
    display: flex;
    // justify-items: center;
    align-items: center;
}
h1{
    width: 129px; 
    height: 40px; 
    margin-left: 10px;
    white-space: pre-wrap; 
    font-weight: 800; 
    font-style: normal;
    font-family: Epilogue, serif; 
    color: white; 
    font-size: 40px; 
    letter-spacing: -1.5px;
    line-height: 1; 
    text-align: left;
}
.News{
    width: 450px;
    height: 450px;
    margin-top: 50px;
    margin-left: 10px;
    background-color: #b22222;
    border-radius: 5px;
    overflow: hidden;
}
.slideshow{
    width: 500%;
    height: 162px;
    display: flex;
}
.slide{
    width: 100%;
    transition: 0.5s;
}
.m_navigation{
    position: absolute;
    // width: 400px;
    margin-top: 170px;
    display: flex;
    justify-content: center;
}
.m_button{
    border: 2px solid #add8e6;
    padding: 5px;
    border-radius: 10px;
    cursor: pointer;
    transition: 1s;
}
.m_button:hover{
    background: #add8e6;
}

input[name="r_news"]{
    position: absolute;
    background-color: lightblue;
    visibility: hidden;
}
.m_button:not(:last-child){
    margin-right: 30px;
}
#rn1:checked ~ .fisrt{
    margin-left: 0;
}
#rn2:checked ~ .fisrt{
    margin-left: -20%;
}
#rn3:checked ~ .fisrt{
    margin-left: -40%;
}